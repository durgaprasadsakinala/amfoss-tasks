#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>

using namespace std;

int main (){
int d;
cin>>d;
int m;
m=(d+1)/2; // take input from user 

for (int i=1;i<=m;i++){

    for (int j=1;j<=m-i;j++){cout << '*';}
    for (int j=1;j<=2*i-1;j++){cout << 'D';}// creat the loop
    for (int j=1;j<=m-i;j++){cout << '*';}
    
    
cout <<endl;}

    
m=m-1;

    
for(int i=m;i>=1;i--){
for(int j=1;j<=m-i+1;j++){cout<<'*';}
for (int j=1;j<=2*i-1;j++){cout << 'D';}
for(int j=1;j<=m-i+1;j++){cout<<'*';}
cout<< endl;



}

    
    return 0;



}
